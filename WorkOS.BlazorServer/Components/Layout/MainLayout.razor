@inherits LayoutComponentBase
@inject ThemeService ThemeService

<MudThemeProvider Theme="@ThemeService" IsDarkMode="ThemeService.IsDarkTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="d-flex align-items-center" Color="Color.Primary" Fixed="true" Elevation="25">
        <MudText Typo="Typo.h4">WorkOS</MudText>
        <MudSpacer />
        <ThemeSwitch />
    </MudAppBar>
    <MudDrawer Color="Color.Secondary" Open="true" ClipMode="DrawerClipMode.Always" Elevation="10">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

